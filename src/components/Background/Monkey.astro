---
const {zIndex, offset} = Astro.props;
---

<div class="wrapper" data-atropos-offset={offset}>
  <div class="character">
    <img
      class="space_helmet"
      src="/space_helmet.webp"
      alt="space helmet"
      draggable="false"
    />
    <img
      class="monkey"
      src="/monkey.webp"
      alt="space monkey"
      draggable="false"
    />
  </div>
</div>

<style define:vars={{zIndex}}>
  .wrapper {
    z-index: var(--zIndex);
    width: 100%;
    height: 100%;
    position: relative;
    pointer-events: none;
  }

  .character {
    position: absolute;
    bottom: -15%;
    left: -5%;
    width: 50rem;
  }

  .monkey {
    width: 100%;
  }

  .space_helmet {
    position: absolute;
    bottom: 42%;
    left: 19%;
    width: 30rem;
    filter: url("#wiggly-effect");
  }

  @media (max-width: 1250px) {
    .character {
      bottom: 0%;
      width: 60%;
    }

    .space_helmet {
      bottom: 42%;
      left: 18%;
      width: 60%;
    }
  }
</style>
