---
const {zIndex} = Astro.props;
---

<div class="stars"></div>

<style define:vars={{zIndex}}>
  .stars {
    z-index: var(--zIndex);
    background-color: transparent;
    background-image: url("/stars.webp");
    background-repeat: repeat;
    background-position: center;
    width: 100%;
    height: 100%;
    animation: twinkle 5s alternate-reverse infinite ease-in-out;
  }

  @keyframes twinkle {
    from {
      opacity: 0.75;
    }
    to {
      opacity: 0.1;
    }
  }
</style>
