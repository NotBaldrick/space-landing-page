---
import Background from "../components/Background/index.astro";
import MainText from "../components/MainText.astro";
---

<main class="wrapper">
  <MainText />

  <img
    class="badge"
    src="/shopifyplusexperts.avif"
    alt="shopify plus experts"
  />

  <Background />
</main>

<style>
  .wrapper {
    overflow: hidden;
    width: 100%;
    height: 100vh;
    position: relative;
    background-color: black;
  }

  .badge {
    z-index: 1;
    position: absolute;
    right: 1.5%;
    bottom: 2%;
  }
</style>
